<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >


    <EditText
android:id="@+id/contHeight"
android:layout_width="175dp"
android:layout_height="48dp"
android:layout_marginTop="10dp"
android:ems="14"
android:hint="Heigth (cm)"
android:inputType="numberDecimal"
app:layout_constraintEnd_toEndOf="@+id/contWidth"
app:layout_constraintStart_toStartOf="@+id/contWidth"
app:layout_constraintTop_toBottomOf="@+id/contWidth" />

<EditText
android:id="@+id/contDepth"
android:layout_width="175dp"
android:layout_height="48dp"
android:layout_marginTop="10dp"
android:ems="14"
android:hint="Depth (cm)"
android:inputType="numberDecimal"
app:layout_constraintEnd_toEndOf="@+id/contHeight"
app:layout_constraintStart_toStartOf="@+id/contHeight"
app:layout_constraintTop_toBottomOf="@+id/contHeight" />

    <EditText
        android:id="@+id/contWidth"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:ems="14"
        android:hint="Width (cm)"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="65dp" />

    <EditText
        android:id="@+id/maxWeight"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="14"
        android:hint="Max Weight (kg)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/contDepth"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/contDepth"
        app:layout_constraintTop_toBottomOf="@+id/contDepth"
        tools:layout_editor_absoluteX="158dp" />
</androidx.constraintlayout.widget.ConstraintLayout>